{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SubscriptionAgreementCanonical_v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["investor", "investment", "signatures"],
  "properties": {
    "investor": {
      "type": "object",
      "additionalProperties": false,
      "required": ["legal_name", "entity_type"],
      "properties": {
        "legal_name": { "type": ["string", "null"] },
        "entity_type": {
          "type": ["string", "null"],
          "enum": ["Individual", "Joint", "Trust", "IRA", "LLC", "Corporation", "Partnership", "Other", null]
        },
        "tax_id": {
          "type": ["object", "null"],
          "additionalProperties": false,
          "properties": {
            "type": { "type": ["string", "null"], "enum": ["SSN", "EIN", "ITIN", null] },
            "value": { "type": ["string", "null"] }
          }
        },
        "addresses": {
          "type": ["array", "null"],
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "type": { "type": ["string", "null"], "enum": ["mailing", "legal", "other", null] },
              "line1": { "type": ["string", "null"] },
              "line2": { "type": ["string", "null"] },
              "city": { "type": ["string", "null"] },
              "state": { "type": ["string", "null"] },
              "postal_code": { "type": ["string", "null"] },
              "country": { "type": ["string", "null"] }
            }
          }
        },
        "contact": {
          "type": ["object", "null"],
          "additionalProperties": false,
          "properties": {
            "email": { "type": ["string", "null"] },
            "phone": { "type": ["string", "null"] }
          }
        }
      }
    },
    "investment": {
      "type": "object",
      "additionalProperties": false,
      "required": ["amount"],
      "properties": {
        "fund_name": { "type": ["string", "null"] },
        "class_series": { "type": ["string", "null"] },
        "amount": {
          "type": "object",
          "additionalProperties": false,
          "required": ["value", "currency"],
          "properties": {
            "value": { "type": ["number", "string", "null"] },
            "currency": { "type": ["string", "null"], "default": "USD" }
          }
        }
      }
    },
    "signatures": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "signer_name": { "type": ["string", "null"] },
          "signer_title": { "type": ["string", "null"] },
          "signed_date": { "type": ["string", "null"] },
          "signature_present": { "type": ["boolean", "null"] }
        }
      }
    }
  }
}
